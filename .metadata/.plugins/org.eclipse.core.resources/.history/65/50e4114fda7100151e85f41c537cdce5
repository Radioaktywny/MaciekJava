import java.util.Scanner;

public class Obsluga 
{
	Scanner scan = new Scanner(System.in);
	String trasy[];
		
	
	
	
	
	
	
	
	
	
	public int wszystkietrasy(){
		trasy[0]="Warszawa";
		trasy[1]="Kraków";
		trasy[2]="Wroc³aw";
		trasy[3]="Gdañsk";
		trasy[4]="Rzeszów";
		trasy[5]="Poznañ";
				
		System.out.println("Witamy , proszê o wybór trasy : ");
		for(int i=0;i<trasy.length;++i)
			System.out.println( i + " " + trasy[i]);
		
		int trasaNr;	
		do{
			trasaNr = scan.nextInt();
			
		}while(trasaNr<=0 && trasaNr > 5);
	
		return trasaNr;
	}
	
}
